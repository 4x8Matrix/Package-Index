{
	"version": "2.0.0",
	"inputs": [
		{
			"id": "ProjectName",
			"description": "the project name",
			"default": "",
			"type": "promptString"
		},
		{
			"id": "ProjectBuild",
			"description": "the project *.project.json map",
			"default": "development",
			"type": "promptString"
		}
	],
	"tasks": [
		// Repository Setup
		{
			"label": "[ðŸš€ - Lune]: Setup Lune LSP Environment",
			"type": "shell",
			"command": "just setup ${input:ProjectName} lune",
			"group": { "kind": "build" }
		},

		{
			"label": "[ðŸš€ - Rojo]: Update project sourcemap",
			"type": "shell",
			"command": "just update_sourcemap ${input:ProjectName}",
			"group": { "kind": "build" },
		},

		// Project Development
		{
			"label": "[ðŸŽˆ - Rojo]: Start Rojo Server for a Project",
			"type": "shell",
